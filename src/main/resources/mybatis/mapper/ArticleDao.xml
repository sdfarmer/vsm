<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--
      mapper为映射的根节点，用来管理DAO接口
      namespace指定DAO接口的完整类名，表示mapper配置文件管理哪个DAO接口(包.接口名)
      mybatis会依据这个接口动态创建一个实现类去实现这个接口，而这个实现类是一个Mapper对象
   -->
<mapper namespace="web.dao.ArticleDao">
    <!--
          id = "接口中的方法名"
          parameterType = "接口中传入方法的参数类型"
          resultType = "返回实体类对象：包.类名"  处理结果集 自动封装
          注意:sql语句后不要出现";"号
              查询：select标签
              增加：insert标签
              修改：update标签
              删除：delete标签
      -->

    <select id="ArticleList" resultType="web.model.Article">
        select * from article where columnurlname2=#{path} limit #{start} ,#{limit}

    </select>
    <select id="RandomArticle" resultType="web.model.Article">

        SELECT * FROM particle as t1 WHERE t1.id>=(RAND()*(SELECT MAX(id) FROM particle))LIMIT #{ids};
    </select>
    <select id="GabiArticle" resultType="java.util.Map">
        select * from gatherariticle where id =#{id}
    </select>
    <select id="RandomGabi" resultType="java.util.Map">

        SELECT * FROM gatherariticle as t1 WHERE t1.id>=(RAND()*(SELECT MAX(id) FROM gatherariticle))LIMIT #{ids};
    </select>
    <select id="SearFac" resultType="java.util.Map">
        select * from search where title like concat ('%',#{search},'%') limit 0,6
    </select>
    <select id="TopSearArt" resultType="java.util.Map">
        select * from gatherariticle where title like concat ('%',#{search},'%') limit 0,6
    </select>
    <select id="ClasssArticle" resultType="java.util.Map">
        select * from   gatherariticle where classs=#{path} limit 0,6

    </select>
</mapper>